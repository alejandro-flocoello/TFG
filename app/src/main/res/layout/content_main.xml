<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.upm.ssr.gatv.tfg.MainActivity"
    tools:showIn="@layout/activity_main"
    android:onClick="muestraAjustes"
    android:paddingTop="80dp"
    android:textAlignment="center">


    <ImageButton
        android:text="@string/Videoconferencia"
        android:id="@+id/buttonVideoconferencia"
        android:onClick="muestraVideoConferencia"
        android:background="@drawable/border_icon"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:src="@drawable/videoconf_btn"
        android:scaleType="centerCrop"
        android:paddingTop="0dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingBottom="80dp"/>

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="@string/Videoconferencia"
        android:id="@+id/textMenuVideoConf"
        android:layout_gravity="center"
        android:textSize="28sp"
        android:textAlignment="center"
        android:layout_marginTop="340dp" />



    <ImageButton
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/buttonVideos"
        android:onClick="muestraVideos"
        android:background="@drawable/border_icon"
        android:layout_gravity="center"
        android:layout_marginRight="450dp"
        android:src="@drawable/videos_btn"
        android:layout_marginBottom="220dp"
        android:scaleType="centerCrop"
        android:paddingTop="0dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingBottom="80dp" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="@string/Videos"
        android:id="@+id/textMenuVideos"
        android:layout_gravity="center"
        android:textSize="28sp"
        android:layout_marginRight="450dp"
        android:textAlignment="center"
        android:layout_marginBottom="60dp" />

    <ImageButton
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/buttonAjustes"
        android:text="@string/Ajustes"
        android:scaleType="centerCrop"
        android:onClick="muestraAjustes"
        android:textSize="28sp"
        android:background="@drawable/border_icon"
        android:layout_marginBottom="220dp"
        android:layout_gravity="center"
        android:src="@drawable/ajustes_btn"
        android:paddingTop="0dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingBottom="80dp"/>

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="@string/Ajustes"
        android:id="@+id/textMenuSettings"
        android:layout_gravity="center"
        android:textSize="28sp"
        android:textAlignment="center"
        android:layout_marginBottom="60dp" />

    <ImageButton
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:text="@string/Alarma"
        android:id="@+id/buttonAlarma"
        android:onClick="muestraAlarma"
        android:background="@drawable/border_icon"
        android:layout_gravity="center"
        android:layout_marginRight="450dp"
        android:src="@drawable/alarm_btn"
        android:layout_marginTop="180dp"
        android:scaleType="centerCrop"
        android:paddingTop="0dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingBottom="80dp" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="@string/Alarma"
        android:id="@+id/textMenuAlarma"
        android:layout_gravity="center"
        android:textSize="28sp"
        android:layout_marginRight="450dp"
        android:textAlignment="center"
        android:layout_marginTop="340dp" />

    <ImageButton
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:text="@string/Mensajes"
        android:id="@+id/buttonMensajes"
        android:onClick="muestraMensajes"
        android:src="@drawable/mensajes_btn"
        android:background="@drawable/border_icon"
        android:layout_gravity="center"
        android:layout_marginLeft="450dp"
        android:layout_marginBottom="220dp"
        android:scaleType="centerCrop"
        android:paddingTop="0dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingBottom="80dp" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="@string/Mensajes"
        android:id="@+id/textMenuMensajes"
        android:layout_gravity="center"
        android:textSize="28sp"
        android:layout_marginLeft="450dp"
        android:textAlignment="center"
        android:layout_marginBottom="60dp" />

    <ImageButton
        android:text="@string/Juegos"
        android:id="@+id/buttonJuegos"
        android:onClick="muestraJuegos"
        android:textSize="30sp"
        android:layout_width="400dp"
        android:layout_gravity="center"
        android:layout_height="400dp"
        android:layout_marginLeft="450dp"
        android:layout_marginTop="180dp"
        android:src="@drawable/juegos_btn"
        android:scaleType="centerCrop"
        android:background="@drawable/border_icon"
        android:paddingTop="0dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:paddingBottom="80dp" />

    <TextView
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:text="@string/Juegos"
        android:id="@+id/textMenuJuegos"
        android:layout_gravity="center"
        android:textSize="28sp"
        android:layout_marginLeft="450dp"
        android:textAlignment="center"
        android:layout_marginTop="340dp" />



</FrameLayout>
