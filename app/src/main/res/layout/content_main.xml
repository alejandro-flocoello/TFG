<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.upm.ssr.gatv.tfg.MainActivity"
    tools:showIn="@layout/activity_main"
    android:onClick="muestraAjustes">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Videos"
        android:id="@+id/buttonVideos"
        android:layout_marginStart="35dp"
        android:layout_marginTop="113dp"
        android:clickable="false"
        android:drawableBottom="@drawable/ic_videos"
        android:onClick="muestraVideos" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Alarma"
        android:id="@+id/buttonAlarma"
        android:layout_below="@+id/buttonVideos"
        android:layout_alignStart="@+id/buttonVideos"
        android:drawableBottom="@drawable/ic_action_alarm"
        android:onClick="muestraAlarma" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Mensajes"
        android:id="@+id/buttonMensajes"
        android:layout_below="@+id/buttonAlarma"
        android:layout_alignStart="@+id/buttonAlarma"
        android:drawableBottom="@drawable/ic_action_gmail"
        android:onClick="muestraMensajes" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Juegos"
        android:id="@+id/buttonJuegos"
        android:layout_below="@+id/buttonMensajes"
        android:layout_alignStart="@+id/buttonMensajes"
        android:drawableBottom="@drawable/ic_action_knight"
        android:onClick="muestraJuegos" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Videoconferencia"
        android:id="@+id/buttonVideoconferencia"
        android:layout_below="@+id/buttonJuegos"
        android:layout_alignStart="@+id/buttonJuegos"
        android:drawableBottom="@drawable/ic_action_users"
        android:onClick="muestraVideoConferencia" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAjustes"
        android:layout_below="@+id/buttonVideoconferencia"
        android:layout_alignStart="@+id/buttonVideoconferencia"
        android:text="@string/Ajustes"
        android:drawableBottom="@drawable/ic_settings"
        android:onClick="muestraAjustes" />

</RelativeLayout>
