<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:defaultValue="0"
        android:entries="@array/pref_set_language"
        android:entryValues="@array/pref_set_language_values"
        android:key="select_language"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_select_language" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="switch_sintetizador"
        android:summary="@string/pref_switch_sintetizador"
        android:title="@string/pref_title_switch_sintetizador" />

</PreferenceScreen>